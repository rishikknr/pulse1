{
  "version": 2,
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "env": {
    "DATABASE_URL": {
      "description": "MySQL/TiDB database connection string",
      "required": true
    },
    "JWT_SECRET": {
      "description": "Session cookie signing secret",
      "required": true
    },
    "VITE_APP_TITLE": {
      "description": "Application title",
      "default": "Pulse Uptime Monitor"
    },
    "VITE_APP_LOGO": {
      "description": "Application logo URL",
      "default": ""
    }
  },
  "rewrites": [
    {
      "source": "/api/trpc/:path*",
      "destination": "/api/trpc/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
